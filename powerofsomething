public class Solution {
    public boolean isPowerOfThree(int number) {
                if(number<=0)
                    return false;
                if(number==1)
                        return true;
                if(number%3!=0)
                        return false;
                while(number>3)
                {
                        number/=3;
                        //System.out.println(number);
                        if(number%3!=0)
                        {
                                //System.out.println(number%4);
                                return false;
                        }
                }
                return true;

        
    }
}
